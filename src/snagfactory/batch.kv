#:kivy 2.3.0

<CheckBox>
    color: 1, 0.38, 0.10

<AccordionItem>
    background_normal: ""
    background_selected: ""
    title_template: "SnagFactoryAccordionTitle"

[SnagFactoryAccordionTitle@Label]:
    text: ctx.title
    canvas.before:
        Color:
            rgb: 0, 0, 0
        BoxShadow:
            size: self.size
            pos: self.pos
            border_radius: 0, 0, 0, 0
            blur_radius: 0
            spread_radius: 3, 3
        Color:
            rgb: 0.8, 0.8, 0.8
        Rectangle:
            size: self.size
            pos: self.pos

<SnagFactoryPartition@BoxLayout>
    orientation: "horizontal"
    name: ""
    height: 50
    active: False
    description: ""

    Label:
        text: root.description

<SnagFactoryBoardID>
    orientation: "horizontal"

    Label:
        text: root.usb_ids

    Label:
        text: "->"

    Label:
        text: root.soc_family

<SnagFactorySoCFamily>
    orientation: "vertical"

    canvas:
        Color:
            rgb: 0, 0, 0
        BoxShadow:
            size: self.size
            pos: self.pos
            border_radius: 0, 0, 0, 0
            blur_radius: 0
            spread_radius: 3, 3
        Color:
            rgb: 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos

<SnagFactoryBatchConfig@BoxLayout>
    orientation: "horizontal"
    padding: 5
    spacing: 10
    soc_families_view: soc_families_view
    board_ids_view: board_ids_view

    canvas:
        Color:
            rgb: 1, 1, 1

        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.4
        spacing: 5

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.2
            padding: 5
            id: board_ids_view

            canvas:
                Color:
                    rgb: 0, 0, 0
                BoxShadow:
                    size: self.size
                    pos: self.pos
                    border_radius: 0, 0, 0, 0
                    blur_radius: 0
                    spread_radius: 3, 3
                Color:
                    rgb: 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: "USB targets"

        Accordion:
            id: soc_families_view
            orientation: "vertical"

            AccordionItem:
                title: "No batch file loaded yet!"

