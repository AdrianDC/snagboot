#:kivy 2.3.0

<Label>
    color: 0, 0, 0, 1
    font_size: 20

<SnagFactoryErrorDialog>
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        Label:
            text: "There is an issue with this batch configuration file:"

        Label:
            text: root.msg

        Button:
            text: "Dismiss"
            on_release: app.root.dismiss_popup()
            background_normal: ""
            background_color: 0, 0, 1

<SnagFactoryFileDialog>
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            rootpath: root.rootpath

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: app.root.dismiss_popup()
                background_normal: ""
                background_color: 1, 0, 0

            Button:
                text: "Load"
                on_release: root.handle_load(filechooser.selection)
                background_normal: ""
                background_color: 0.5, 0.5, 1

<SnagFactoryBoard>
    size: root.width, 65
    size_hint_y: None
    phase_label: phase_label

    BoxLayout:
        id: board_box
        pos: root.pos
        size: root.size
        orientation: "horizontal"
        padding: 20
        spacing: 20

        canvas:
            Color:
                rgb: 1, 0.38, 0.10
            BoxShadow:
                size: board_box.size
                pos: board_box.pos
                border_radius: 10, 10, 10, 10
            Color:
            	rgb: 1, 1, 1
            RoundedRectangle:
                size: board_box.size
                pos: board_box.pos

        Label:
            size_hint_x: 0.1
            text: root.path
            halign: "left"

        Label:
            size_hint_x: 0.1
            text: root.soc_model
            halign: "center"

        Label:
            id: phase_label
            size_hint_x: 0.1
            text: root.phase
            halign: "center"
            color: 0, 1, 0
            padding: 20, 0, 0, 0

        Label:
            text_size: self.width, self.height
            text: root.status
            halign: "left"
            valign: "middle"
            padding: 20, 0, 0, 0
            shorten: True

        Button:
            text: "log"
            size_hint_x: 0.1
            on_press: root.ui.verbose_log = root
            background_color: 0.6, 0.76, 1, 1

<SnagFactorySidebar@BoxLayout>
    canvas:
        Color:
            rgb: 1, 0.38, 0.10
        Rectangle:
            size: self.size
            pos: self.pos

    Button:
        size_hint: None, None
        center_x: 0
        width: 70
        height: 100
        background_normal: "start.png"
        text: ""
        on_press: app.root.start();

    ToggleButton:
        size_hint: None, None
        center_x: 0
        width: 70
        height: 37
        background_normal: "boards.png"
        background_down: "boards.png"
        background_color: (0, 0, 0, 0.5) if self.state == "down" else (0, 0, 0, 1)
        state: "down"
        text: ""
        group: "main_tab"
        on_press: app.root.view_board_list();

    ToggleButton:
        size_hint: None, None
        center_x: 0
        width: 80
        height: 76
        background_normal: "config.png"
        background_down: "config.png"
        background_color: (0, 0, 0, 0.5) if self.state == "down" else (0, 0, 0, 1)
        text: ""
        group: "main_tab"
        on_press: app.root.view_batch_config()

    Label:
        test: ""

    Button:
        size_hint: None, None
        center_x: 0
        width: 80
        height: 61
        background_normal: "load_config.png"
        text: ""
        on_press: app.root.open_batch_dialog();

    Button:
        size_hint: None, None
        center_x: 0
        width: 80
        height: 61
        background_normal: "view_logs.png"
        text: ""
        on_press: app.root.open_log_dialog();


<SnagFactoryLogView@BoxLayout>
    log_area: log_area
    log_board_path: log_board_path

    Label:
        size_hint_y: 0.1
        text: "Detailed logs"
        text_size: self.width, None

    Label:
        id: log_board_path
        size_hint_y: 0.1
        text_size: self.width, None
        text: ""

    ScrollView:
        id: log_scrollview
        width: root.width
        size_hint_y: 0.8
        do_scroll_x: False
        scroll_y: 0
        scroll_type: ["bars"]

        Label:
            id: log_area
            text_size: self.width, None
            size: self.texture_size
            size_hint_y: None
            text: ""
            halign: "left"
            valign: "top"


<SnagFactoryUI>
    id: snagfactory_ui
    widget_container: widget_container
    log_boxlayout: log_boxlayout
    log_area: log_boxlayout.log_area
    log_board_path: log_boxlayout.log_board_path
    main_page: main_page
    batch_config: batch_config

    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "horizontal"

        SnagFactorySidebar:
            size_hint_x: None
            width: 80
            orientation: "vertical"
            padding: 5
            spacing: 20

        PageLayout:
            id: main_page
            border: 0
            anim_kwargs: {'d': 0.2, 't': 'in_quad'}

            BoxLayout:
                orientation: "horizontal"

                BoxLayout:
                    orientation: "vertical"

                    BoxLayout:
                        size_hint_y: 0.1
                        orientation: "vertical"
                        padding: 10

                        canvas:
                            Color:
                                rgb: 0.90, 0.90, 0.90
                            Rectangle:
                                size: self.size
                                pos: self.pos

                        Label:
                            font_size: 15
                            text: root.phase_label
                            text_size: self.size
                            valign: "middle"

                        Label:
                            font_size: 20
                            text: root.status
                            text_size: self.size
                            valign: "middle"

                    ScrollView:
                        id: board_scrollview
                        do_scroll_x: False
                        scroll_type: ["bars"]

                        GridLayout:
                            id: widget_container
                            pos: board_scrollview.pos
                            height: self.minimum_height
                            width: board_scrollview.width
                            cols: 1
                            size_hint_y: None
                            spacing: 20
                            padding: 5

                SnagFactoryLogView:
                    id: log_boxlayout
                    size_hint_x: 0
                    orientation: "vertical"

            SnagFactoryBatchConfig:
                id: batch_config


